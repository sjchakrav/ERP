table
  width 100%
  table-layout fixed
  thead
    background $primary-gray

  &.striped
    tr:nth-child(even)
        background $off-white
  &.bordered
    tr
      border-bottom 1px solid $gray-10

  td, th
    vertical-align middle
    padding $space-small $space
    text-align left
    
  th
    @extends small-caps
    &.one-line
      white-space nowrap

  a
    color $primary-20
