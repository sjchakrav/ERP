@import reset
@import _vars
@import _extends
@import _typography
@import _table

html
  font-size $base * 1.1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility

  @media only screen and (min-width $desktop)
    font-size $base
  @media only screen and (min-width $desktop-large)
    font-size $base * 1.1

body
  color $text-color
  font-family $font-face
  font-size $app-font-size-medium

clearfix()
  &:after
    content ""
    display table
    clear both
    
units(cols, grid = 12)
  (cols/grid) * 100%



// --------------------------

hgroup
  *
    margin-bottom $space

.site-header
  background-image url(../images/209H.jpg)
  background-size cover
  color white

.guidelines
  background-image url(../images/Mountain.jpg)
  background-size cover
  color white
  // font-weight 900
  font-size 20px;

.header
  text-align: center;
  // background: #7fd0d9;
  color: black;
  padding: 30px 0;
  font-size: 28px;
  font-family: "Agenda", Helvetica,Arial, sans-serif;
.referral-guideline-header
  text-align center


.container
  padding $space
  font-weight 350
 

.list-section
  width 50%
  position relative
  left 30%

.easy
  max-width $tablet
  margin-left auto
  margin-right auto
  
.refer-a-friend-img
  position relative
  top 6px
  z-index 1
span.jobvite
  position relative
  z-index 2
#finding, #publish-to
  font-weight 500
  color red
  


// GRID --------------------------
.row
  clearfix()
  // margin-left - $space-small
  // margin-right - $space-small

.unit
  box-sizing border-box
  padding-left $space-small
  padding-right $space-small
  margin-bottom $space
  width 100%
  float left

  @media only screen and (min-width: $tablet)
    for $i in 1..$grid
      &.tablet-{$i}
        width units($i)
  
  @media only screen and (min-width: $desktop)
    for $i in 1..$grid
      &.desktop-{$i}
        width units($i)

  @media only screen and (min-width: $desktop-large)
    for $i in 1..$grid
      &.desktop-large-{$i}
        width units($i)
        

.modal
  display none
  position absolute
  top 0
  right 0
  left 0
  bottom 0
  

// POPUP CONFIGURATION AND STYLING-------------------------------------------------------
.modal-content
  position absolute
  top 6rem
  left 50%
  width 40%
  transform translateX(-50%)
  height 47%
  padding $space
  // For background image, store file in an img folder or get img from inside rms
  // background: url(http://www.executive-i.com/picstore/hh/15_Risk%20Management%20Solutions%20jobs.jpg) no-repeat center
  background-color white
  text-align center
  box-shadow 0 $space-micro $space-micro rgba(black, .3)

  &.p 
    text-align center
  //Make pretty and make it animate in/out of view with css
    

// ANIMATIONS -----------------------------------------------------------------------------

.modal-content
  animation-name fadeIn
  animation-duration .5s

@keyframes fadeIn
  from
    opacity 0.5








