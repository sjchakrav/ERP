@import reset
@import _vars
@import _extends
@import _typography
@import _table

html
  font-size $base * 1.1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility

  @media only screen and (min-width $desktop)
    font-size $base
  @media only screen and (min-width $desktop-large)
    font-size $base * 1.1

body
  color $text-color
  font-family $font-face
  font-size $app-font-size-medium

clearfix()
  &:after
    content ""
    display table
    clear both
    
units(cols, grid = 12)
  (cols/grid) * 100%



// --------------------------

hgroup
  *
    margin-bottom $space

.site-header
  background-image url(../images/209H.jpg)
  background-size cover
  color white

.guidelines
  background-image url(../images/208H.jpg)
  background-size cover

.header
  text-align: center;
  // background: #7fd0d9;
  color: black;
  padding: 30px 0;
  font-size: 28px;
  font-family: "Agenda", Helvetica,Arial, sans-serif;
.referral-guideline-header
  text-align center


.container
  padding $space

.list-section
  width 50%
  position relative
  left 30%

.easy
  max-width $tablet
  margin-left auto
  margin-right auto


// GRID --------------------------
.row
  clearfix()
  margin-left - $space-small
  margin-right - $space-small

.unit
  box-sizing border-box
  padding-left $space-small
  padding-right $space-small
  margin-bottom $space
  width 100%
  float left

  @media only screen and (min-width: $tablet)
    for $i in 1..$grid
      &.tablet-{$i}
        width units($i)
  
  @media only screen and (min-width: $desktop)
    for $i in 1..$grid
      &.desktop-{$i}
        width units($i)

  @media only screen and (min-width: $desktop-large)
    for $i in 1..$grid
      &.desktop-large-{$i}
        width units($i)
