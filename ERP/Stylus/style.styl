@import 'reset.styl'

body
  font-family Gotham
  padding 50px 20px 0;
  // background #f4f4f7;
  background white;
  color #444;
  margin 0px
  padding 0px
  font-size 15px
  width 100%

  .header-container
    border 2px solid red
    background-color red
    margin-bottom 2rem
    
  .sections-container
    padding-left 2rem
    padding-right 2rem
    width 0 auto


  h1.heading
    text-align center
    position relative
    border 2px solid red
    text-shadow 4px 4px 4px black
    font-size 45px
    position relative
    line-height 1.2em
    padding 20px 20px
    color white
    
  .referral-reason-header
    color #0000000
    font-family Gotham SSm A
    line-height 120%
    margin 0 0 20px
    text-transform uppercase
    font-size 1.2em
    // width 100%
    

  section.referral-reason
    // border 2px solid red
    position relative
    // width 45%
    float left
    font-size 20px
    margin-left 2rem

    .referral-reason-header
      width 55%
      margin-top 2rem
      // margin-bottom 2rem
      font-color black
      // border 2px solid red
    .referral-reason-cols
      // border 2px solid red
      .leftcol
        float left
        width 45%
        // border 2px solid red
        p.a-players
          font-family 'Gotham SSm A', 'Gotham SSm B', Arial, Helvetica, sans-serif
          line-height 1
          margin-top 2rem
          margin-bottom 2rem
      .rightcol
        margin-top 2rem
        float right
        width 45%
        // border 2px solid red
      

  section.referring-is-easy
    display block
    // border 2px solid red
    position relative
    width 35%
    left 20%
    clear both
    h2, ol
      margin-top 2rem
      margin-bottom 2rem
    p
      margin-top 2rem
      margin-bottom 2rem
    

  section.qualification  
    width 50%
    position relative
    left 20%
    // background yellow
    h2
      margin-top 2rem
      margin-bottom 2rem
    ul
      list-style-type disc
      margin-left 2rem

  .bonus-structure
    margin-top 2rem
    margin-bottom 2rem
    
  // Clearfix ----------------------------------------

  .clearfix:before,
  .clearfix:after 
    content " "
    display table


  .clearfix:after 
      clear both


    
    
