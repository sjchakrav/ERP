@import 'reset.styl'

body
  font-family Gotham
  padding 50px 20px 0;
  // background #f4f4f7;
  background white;
  color #444;
  margin 0px
  padding 0px
  font-size 15px

  .header-container
    border 2px solid red
    background-color red
    margin-bottom 3rem
    
  .sections-container
    padding-left 2rem
    padding-right 2rem
    width 0 auto

    
  h1.heading
    text-align center
    position relative
    border 2px solid red
    text-shadow 4px 4px 4px black
    font-size 45px
    position relative
    line-height 1.2em
    padding 20px 20px
    color white
    
  .referral-reason-header
    color #0000000
    font-family Gotham SSm A
    line-height 120%
    margin 0 0 20px
    text-transform uppercase
    font-size 1.2em
    // width 100%
    

  section.referral-reason
    // border 2px solid red
    position relative
    width 45%
    float left
    font-size 20px
    margin-left 2rem
    .referral-reason-header
      width 100%
      margin-top 2rem
      margin-bottom 2rem
      font-color black
      // width 50%
    // border 2px solid red
    p.a-players
      // width 50%
      // border 2px solid red
      font-family 'Gotham SSm A', 'Gotham SSm B', Arial, Helvetica, sans-serif
      line-height 1
      margin-top 2rem
      margin-bottom 2rem
    .referral-reason-img
      float right
      width 45%
      

  ol.easy-referral-list
    counter-reset:li;
    // list-style: none;

      

  section.referring-is-easy
    // border 2px solid red
    position relative
    width 35%
    left 20%
    h2, ol
      margin-top 2rem
      margin-bottom 2rem
    p
      margin-top 2rem
      margin-bottom 2rem
    

  section.qualification  
    width 50%
    position relative
    left 20%
    // background yellow
    h2
      margin-top 2rem
      margin-bottom 2rem
    ul
      list-style-type disc
      margin-left 2rem

  .bonus-structure
    margin-top 2rem
    margin-bottom 2rem


    
    
